        // Enhanced Neural Network Background with 60 nodes and improved effects
        function initNeuralNetwork() {
            const canvas = document.getElementById('neuralCanvas');
            if (!canvas) return;
            
            const ctx = canvas.getContext('2d');
            let animationId;
            let nodes = [];
            const nodeCount = 60; // Increased from 50 to 60

            function resizeCanvas() {
                canvas.width = window.innerWidth;
                canvas.height = window.innerHeight;
                initNodes();
            }

            function initNodes() {
                nodes = [];
                for (let i = 0; i < nodeCount; i++) {
                    nodes.push(new Node(
                        Math.random() * canvas.width,
                        Math.random() * canvas.height
                    ));
                }
            }

            class Node {
                constructor(x, y) {
                    this.x = x;
                    this.y = y;
                    this.vx = (Math.random() - 0.5) * 1.2; // Slightly faster movement
                    this.vy = (Math.random() - 0.5) * 1.2;
                    this.energy = Math.random();
                    this.pulse = Math.random() * Math.PI * 2;
                    this.radius = Math.random() * 4 + 2; // Slightly larger nodes
                    this.glowIntensity = Math.random() * 0.5 + 0.5;
                }

                update() {
                    this.x += this.vx;
                    this.y += this.vy;
                    this.pulse += 0.04; // Faster pulsing
                    this.energy = Math.abs(Math.sin(this.pulse)) * 0.9 + 0.1; // Better visibility

                    if (this.x < 0 || this.x > canvas.width) this.vx *= -1;
                    if (this.y < 0 || this.y > canvas.height) this.vy *= -1;

                    this.x = Math.max(0, Math.min(canvas.width, this.x));
                    this.y = Math.max(0, Math.min(canvas.height, this.y));
                }

                draw() {
                    ctx.save();
                    ctx.globalAlpha = this.energy;
                    
                    // Multiple gradient layers for enhanced glow
                    // Outer glow
                    const outerGradient = ctx.createRadialGradient(this.x, this.y, 0, this.x, this.y, this.radius * 6);
                    outerGradient.addColorStop(0, `rgba(100, 255, 218, ${this.energy * 0.3})`);
                    outerGradient.addColorStop(0.3, `rgba(50, 150, 255, ${this.energy * 0.2})`);
                    outerGradient.addColorStop(1, 'rgba(0, 100, 255, 0)');
                    
                    ctx.fillStyle = outerGradient;
                    ctx.beginPath();
                    ctx.arc(this.x, this.y, this.radius * 5, 0, Math.PI * 2);
                    ctx.fill();
                    
                    // Middle glow
                    const middleGradient = ctx.createRadialGradient(this.x, this.y, 0, this.x, this.y, this.radius * 3);
                    middleGradient.addColorStop(0, `rgba(100, 255, 218, ${this.energy * 0.7})`);
                    middleGradient.addColorStop(0.5, `rgba(50, 150, 255, ${this.energy * 0.4})`);
                    middleGradient.addColorStop(1, 'rgba(0, 100, 255, 0)');
                    
                    ctx.fillStyle = middleGradient;
                    ctx.beginPath();
                    ctx.arc(this.x, this.y, this.radius * 2.5, 0, Math.PI * 2);
                    ctx.fill();
                    
                    // Core node with bright center
                    const coreGradient = ctx.createRadialGradient(this.x, this.y, 0, this.x, this.y, this.radius);
                    coreGradient.addColorStop(0, `rgba(255, 255, 255, ${this.energy})`);
                    coreGradient.addColorStop(0.7, `rgba(100, 255, 218, ${this.energy})`);
                    coreGradient.addColorStop(1, `rgba(50, 150, 255, ${this.energy * 0.8})`);
                    
                    ctx.fillStyle = coreGradient;
                    ctx.beginPath();
                    ctx.arc(this.x, this.y, this.radius, 0, Math.PI * 2);
                    ctx.fill();
                    
                    ctx.restore();
                }
            }

            function animate() {
                ctx.clearRect(0, 0, canvas.width, canvas.height);
                
                nodes.forEach(node => {
                    node.update();
                    node.draw();
                });

                // Enhanced dynamic connections with gradient lines
                for (let i = 0; i < nodes.length; i++) {
                    for (let j = i + 1; j < nodes.length; j++) {
                        const nodeA = nodes[i];
                        const nodeB = nodes[j];
                        const distance = Math.sqrt(
                            Math.pow(nodeA.x - nodeB.x, 2) + Math.pow(nodeA.y - nodeB.y, 2)
                        );

                        if (distance < 140) { // Slightly increased connection distance
                            const opacity = (140 - distance) / 140;
                            const energy = (nodeA.energy + nodeB.energy) / 2;
                            
                            ctx.save();
                            ctx.globalAlpha = opacity * energy * 0.6; // Increased visibility
                            
                            // Enhanced gradient line
                            const gradient = ctx.createLinearGradient(nodeA.x, nodeA.y, nodeB.x, nodeB.y);
                            gradient.addColorStop(0, `rgba(100, 255, 218, ${opacity * energy})`);
                            gradient.addColorStop(0.2, `rgba(150, 255, 200, ${opacity * energy * 0.9})`);
                            gradient.addColorStop(0.5, `rgba(50, 150, 255, ${opacity * energy * 0.8})`);
                            gradient.addColorStop(0.8, `rgba(150, 255, 200, ${opacity * energy * 0.9})`);
                            gradient.addColorStop(1, `rgba(100, 255, 218, ${opacity * energy})`);
                            
                            ctx.strokeStyle = gradient;
                            ctx.lineWidth = energy * 2 + 0.5; // Thicker lines
                            
                            ctx.beginPath();
                            ctx.moveTo(nodeA.x, nodeA.y);
                            ctx.lineTo(nodeB.x, nodeB.y);
                            ctx.stroke();
                            
                            // Add subtle pulse effect to connections
                            if (energy > 0.7) {
                                ctx.globalAlpha = opacity * energy * 0.3;
                                ctx.lineWidth = energy * 4;
                                ctx.stroke();
                            }
                            
                            ctx.restore();
                        }
                    }
                }

                animationId = requestAnimationFrame(animate);
            }

            // Initialize
            resizeCanvas();
            window.addEventListener('resize', resizeCanvas);
            animate();
        }

        // Enhanced Particle System with Yellow and Silver colors and cross sparkles
        function initParticleSystem() {
            const canvas = document.getElementById('particleCanvas');
            if (!canvas) return;
            
            const ctx = canvas.getContext('2d');
            let animationId;
            let particles = [];

            function resizeCanvas() {
                canvas.width = window.innerWidth;
                canvas.height = window.innerHeight;
            }

            class Particle {
                constructor(x, y) {
                    this.x = x;
                    this.y = y;
                    this.vx = (Math.random() - 0.5) * 4; // More dynamic movement
                    this.vy = (Math.random() - 0.5) * 4;
                    this.life = 1;
                    this.decay = Math.random() * 0.02 + 0.008; // Longer life
                    this.size = Math.random() * 5 + 3; // Larger particles
                    this.sparkle = Math.random() * 2 * Math.PI;
                    this.sparkleSpeed = Math.random() * 0.3 + 0.1;
                    // Random color: yellow or silver with enhanced colors
                    this.colorType = Math.random() > 0.5 ? 'yellow' : 'silver';
                    this.brightness = Math.random() * 0.5 + 0.5;
                }

                update() {
                    this.x += this.vx;
                    this.y += this.vy;
                    this.life -= this.decay;
                    this.sparkle += this.sparkleSpeed;
                    this.size *= 0.996; // Slower size decay
                    
                    // Add slight gravity and air resistance
                    this.vy += 0.02;
                    this.vx *= 0.99;
                    this.vy *= 0.99;
                }

                draw() {
                    ctx.save();
                    ctx.globalAlpha = this.life;
                    
                    const brightness = Math.abs(Math.sin(this.sparkle)) * this.brightness + 0.3;
                    
                    // Enhanced gradient based on color type with authentic colors
                    const gradient = ctx.createRadialGradient(
                        this.x, this.y, 0,
                        this.x, this.y, this.size * 4
                    );
                    
                    if (this.colorType === 'yellow') {
                        // Authentic yellow/gold gradient
                        gradient.addColorStop(0, `rgba(255, 255, 150, ${brightness})`);
                        gradient.addColorStop(0.3, `rgba(255, 223, 0, ${brightness * 0.8})`);
                        gradient.addColorStop(0.6, `rgba(255, 165, 0, ${brightness * 0.6})`);
                        gradient.addColorStop(1, `rgba(255, 140, 0, 0)`);
                    } else {
                        // Authentic silver/white gradient
                        gradient.addColorStop(0, `rgba(255, 255, 255, ${brightness})`);
                        gradient.addColorStop(0.3, `rgba(220, 220, 220, ${brightness * 0.8})`);
                        gradient.addColorStop(0.6, `rgba(192, 192, 192, ${brightness * 0.6})`);
                        gradient.addColorStop(1, `rgba(169, 169, 169, 0)`);
                    }
                    
                    ctx.fillStyle = gradient;
                    ctx.beginPath();
                    ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
                    ctx.fill();
                    
                    // Enhanced cross-shaped sparkle effects
                    ctx.save();
                    ctx.globalAlpha = this.life * brightness;
                    
                    if (this.colorType === 'yellow') {
                        ctx.strokeStyle = `rgba(255, 255, 100, ${brightness})`;
                        ctx.shadowColor = 'rgba(255, 223, 0, 0.8)';
                    } else {
                        ctx.strokeStyle = `rgba(255, 255, 255, ${brightness})`;
                        ctx.shadowColor = 'rgba(220, 220, 220, 0.8)';
                    }
                    
                    ctx.shadowBlur = 5;
                    ctx.lineWidth = 1.5;
                    ctx.beginPath();
                    
                    // Main cross sparkle
                    ctx.moveTo(this.x - this.size * 1.5, this.y);
                    ctx.lineTo(this.x + this.size * 1.5, this.y);
                    ctx.moveTo(this.x, this.y - this.size * 1.5);
                    ctx.lineTo(this.x, this.y + this.size * 1.5);
                    
                    // Diagonal sparkles for extra effect
                    if (brightness > 0.7) {
                        ctx.moveTo(this.x - this.size, this.y - this.size);
                        ctx.lineTo(this.x + this.size, this.y + this.size);
                        ctx.moveTo(this.x + this.size, this.y - this.size);
                        ctx.lineTo(this.x - this.size, this.y + this.size);
                    }
                    
                    ctx.stroke();
                    
                    ctx.restore();
                    ctx.restore();
                }
            }

            function handleMouseMove(e) {
                // 4 particles per mouse movement for more visual impact
                for (let i = 0; i < 4; i++) {
                    particles.push(
                        new Particle(
                            e.clientX + (Math.random() - 0.5) * 40,
                            e.clientY + (Math.random() - 0.5) * 40
                        )
                    );
                }
            }

            function animate() {
                ctx.clearRect(0, 0, canvas.width, canvas.height);
                
                particles = particles.filter(particle => {
                    particle.update();
                    particle.draw();
                    return particle.life > 0 && particle.size > 0.1;
                });

                animationId = requestAnimationFrame(animate);
            }

            // Initialize
            resizeCanvas();
            window.addEventListener('resize', resizeCanvas);
            document.addEventListener('mousemove', handleMouseMove);
            animate();
        }

